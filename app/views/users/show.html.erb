<article id="user">
  <header>
    <%= profile_image_for(@user) %>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
    <h3>Member Since</h3>
    <p>
      <%= @user.created_at.strftime("%B %Y") %>
    </p>
    <h3>Currently Registered For:</h3>
    <% @user.registrations.each do |r| %>
      <p><%= r.event.name %> <%="(#{time_ago_in_words(r.created_at)})"%></p>
    <% end %>

    <%= render 'events' %>

  </header>
  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
        <%= link_to 'Delete Account', @user,
          method: :delete,
          data: { confirm: 'Are you sure you want to permanently delete your account?' },
          class: 'button' %>
      <% end %>
    </nav>
    </footer>
  </article>
