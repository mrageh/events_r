<article id="event" class="event">
  <header>
    <%= image_for(@event) %>
    <h1><%= @event.name %></h1>
    <h2><%= @event.starts_at %></h2>
  </header>

  <p>
    <%= @event.description %>
  </p>

  <p>
    <%= pluralize(@event_users.size, 'Like')%>
  </p>

  <%= like_and_unlike_button %>

  <%= render 'users' %>

  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>

  <h3>Location</h3>
  <p>
    <%= @event.location %>
  </p>

  <h3>Capacity</h3>
  <p>
    <%= pluralize(@event.capacity, 'spot') %>
  </p>
  <p>
    <%= link_to "Who's Registered?", event_registrations_path(@event) %>
  </p>

  <footer>
    <%= register_link(@event) %>
    <p><%= pluralize(@event.spots_left, 'spot') %> available</p>
    <nav>
      <% if current_user_admin? %>
        <%= link_to 'Edit', edit_event_path(@event), class: 'button' %>
        <%= link_to 'Delete', @event,
                    class: 'button',
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </nav>
  </footer>
</article>
